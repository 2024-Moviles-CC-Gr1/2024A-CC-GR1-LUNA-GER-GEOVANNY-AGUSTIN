<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_companias"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B354C93"
    tools:context=".ListCompanias">

    <ListView
        android:id="@+id/lv_list_compania"
        android:layout_width="286dp"
        android:layout_height="484dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <Button
        android:id="@+id/btn_anadir_compania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Anadir Compania"
        app:layout_constraintEnd_toEndOf="@+id/lv_list_compania"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/lv_list_compania"
        app:layout_constraintTop_toBottomOf="@+id/lv_list_compania" />
</androidx.constraintlayout.widget.ConstraintLayout>